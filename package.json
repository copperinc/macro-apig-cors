{
  "name": "@copper/macro-apig-cors",
  "version": "1.0.1",
  "description": "Architect (arc.codes) serverless framework macro that customizes the generated HTTP API Gateway CORS settings",
  "main": "index.js",
  "scripts": {
    "test:unit": "jasmine --config=test/jasmine.json",
    "lint": "eslint",
    "test": "npm run lint && npm run test:unit"
  },
  "keywords": [
    "serverless",
    "arc",
    "cloudformation",
    "cors"
  ],
  "author": "Copper Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/copperinc/macro-apig-cors/issues"
  },
  "homepage": "https://github.com/copperinc/macro-apig-cors#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/copperinc/macro-apig-cors.git"
  },
  "devDependencies": {
    "@architect/eslint-config": "^1.0.0",
    "eslint": "^7.19.0",
    "jasmine": "^3.6.4"
  },
  "eslintConfig": {
    "extends": "@architect/eslint-config",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
